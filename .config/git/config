[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  push-all = "!branch=$(git rev-parse --abbrev-ref HEAD) && git remote | xargs -I {} git push {} \"$branch\" --tags"
[pull]
  rebase = true
[push]
  autoSetupRemote = true
[init]
  defaultBranch = main
[include]
  path = ~/.config/git/config-personal
[core]
  autocrlf = input
  editor = nvim
  pager = critique --stdin
[diff]
  tool = critique
[difftool "critique"]
  cmd = critique difftool "$LOCAL" "$REMOTE"
