#!/usr/bin/env bash

set -euo pipefail

require() {
  if ! command -v "$1" >/dev/null 2>&1; then
    local msg="Required command not found: $1"
    if command -v notify-send >/dev/null 2>&1; then
      notify-send "Wi-Fi launcher" "$msg" -u critical -t 5000
    fi
    printf '%s\n' "$msg" >&2
    exit 1
  fi
}

if command -v rfkill >/dev/null 2>&1; then
  rfkill unblock wifi || true
fi

SCRIPT_DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"

if command -v impala >/dev/null 2>&1; then
  exec "$SCRIPT_DIR/tui-or-focus" impala
elif command -v nmtui >/dev/null 2>&1; then
  exec "$SCRIPT_DIR/tui-or-focus" nmtui
else
  msg="No Wi-Fi TUI found (impala or nmtui)."
  if command -v notify-send >/dev/null 2>&1; then
    notify-send "Wi-Fi launcher" "$msg" -u critical -t 5000
  fi
  printf '%s\n' "$msg" >&2
  exit 1
fi
